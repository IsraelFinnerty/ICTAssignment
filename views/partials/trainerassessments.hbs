{{#each assessments}}

<table class="ui fixed table">
    <thead>
    <tr>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fdatetime.png?v=1562875523494" height="40px"><br>Date & Time</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fweight.png?v=1562875522947" height="40px"><br>Weight</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fchest.png?v=1562875522629" height="40px"><br>Chest</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fthigh.png?v=1562875524175" height="40px"><br>Thigh</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fupperarm.png?v=1562875522835" height="40px"><br>Upper Arm</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fwaist.png?v=1562875522926" height="40px"><br>Waist</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fhips.png?v=1562875523729" height="40px"><br>Hips</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Ftrend.png?v=1562875524627" height="40px"><br>Trend</th>
        <th><img src="https://cdn.glitch.com/78d3d20b-b02b-49ad-a6e8-e09996aded47%2Fcomment.png?v=1562875523317" height="40px"><br>Comment</th>
        <th></th>
    </tr>
    </thead>





<tbody>
    <tr>
        <td>
            {{date}}
        </td>
        <td>
            {{weight}}kg
        </td>
        <td>
            {{chest}}cm
        </td>
        <td>
            {{thigh}}cm
        </td>
        <td>
            {{upperarm}}cm
        </td>
        <td>
            {{waist}}cm
        </td>
        <td>
            {{hips}}cm
        </td>
        <td>
            {{#if trend}}
            <i class= "green thumbs up icon"></i>
            {{else}}
            <i class= "red thumbs down icon"></i>
            {{/if}}
        </td>
        <td>
            {{comment}}
        </td>

        </td>
    </tr>

</tbody>
    </table>

    <form class="ui stacked segment form" action="/trainerdashboard/{{../user}}/addcomment/{{id}}" method="POST">

        <div class="field">
            <label>Add Comment</label>
            <input placeholder="Comment" type="text" name="comment">
        </div>

        <button class="ui blue submit button">Update</button>
    </form>


{{/each}}

